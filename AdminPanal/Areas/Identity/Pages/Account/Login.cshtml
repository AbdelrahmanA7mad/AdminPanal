@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="~/css/login.css" rel="stylesheet" />
<div class="login-container">
    <div class="login-box">
            <h2>Welcome Back</h2>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" role="alert"></div>
                 <div class="input-group">
                    <label asp-for="Input.Email">Email</label>
                     <input asp-for="Input.Email" id="email" autocomplete="username" aria-required="true" placeholder="" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            <div class="input-group">
                    <label asp-for="Input.Password">Password</label>
                     <input asp-for="Input.Password" id="password" autocomplete="current-password" aria-required="true" placeholder="" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            <div class="remember-forgot">

                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
                </div>
                <div>
                    <button id="login-submit" type="submit">Log in</button>
                </div>
            </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
