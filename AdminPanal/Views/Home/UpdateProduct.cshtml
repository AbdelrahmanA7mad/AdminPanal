@using AdminPanal.ViewModel
@model CreateProductViewModel

<div class="main-content">

<h3 class="mt-3">Edit Product</h3>

<form asp-controller="Home" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Price" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Price" placeholder="Enter Price">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>  
            <div>
                <label asp-for="Description" class="form-label mt-4"></label>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Enter Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select class="form-select" id="exampleSelect1" asp-for="CategoryId" asp-items="Model.Categories">
                    <option>Select Categoty</option>
                </select>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Image" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="Image" id="Cover">
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-info text-black mt-4">Update</button>
        </div>
            <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
                <img class="cover-preview img-fluid" alt="Cover" src="@Url.Content($"{Settings.ImagePath}/{Model.currentcover}")" />
            </div>


    </div>

</form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/photo-form.js" asp-append-version="true"></script>

}   