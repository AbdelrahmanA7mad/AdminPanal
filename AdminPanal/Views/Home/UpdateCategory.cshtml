@model AdminPanal.ViewModel.CreateCategoryViewModel
<div class="main-content">

<h3 class="mt-3">Update Category</h3>
<form asp-controller="Home" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div>
                <label asp-for="Name" class="form-label mt-4"></label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-info text-black mt-4">Update</button>
        </div>
    </div>
</form>
</div>


